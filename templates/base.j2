{% endblock %}

<script>

function storeKey() {
    userKey = "{{ user_key }}"
    userName = "{{ user_name }}"
    if (userKey) {
        console.log('Hi ' + userName)
        window.localStorage.setItem('key', userKey)
        window.localStorage.setItem('name', userName)
        // window.location = '/'
    }
    if (window.localStorage.getItem('key')) {
        $('#rsvpDiv').show()
    }
    
}

storeKey()
</script>

