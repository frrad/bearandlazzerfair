<script>

function rsvpClick() {
    userKey = window.localStorage.getItem('key')
    userName = window.localStorage.getItem('name')
    if (userKey && userName) {
        $('#name_input').val(userName)
        $('#rsvpModalDiv').show()
    } else {
        alert('Please use the RSVP link in the email to RSVP!')
    }
}


function hideRSVP(coming){
    $('#rsvpModalDiv').hide()
    userName = window.localStorage.getItem('name')
    userKey = window.localStorage.getItem('key')

    data = {
        'name': $('#name_input').val(),
        'coming': coming,
        'userName': userName,
        'userKey': userKey
    }

    $.ajax('/rsvp', {
        method: 'POST',
        data: JSON.stringify(data),
        contentType: 'application/json',
    })
}

function storeKey() {
    userKey = "{{ user_key }}"
    userName = "{{ user_name }}"
    if (userKey) {
        console.log('Hi ' + userName)
        window.localStorage.setItem('key', userKey)
        window.localStorage.setItem('name', userName)
        // window.location = '/'
    }
}

storeKey()

</script

